<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">  
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>io.github.kriolos.opos</groupId>
        <artifactId>kriolos-opos-parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>kriolos-opos-app</artifactId> 
    <packaging>jar</packaging>
    <name>Kriolos.POS.App</name> 
    
    <properties>
        <!-- top.parent.basedir is generated by directory:highest-basedir -->
        <!-- Props generate by jgit-buildnumber-maven-plugin buildnumber-maven-plugin: buildNumber, buildScmBranch -->
        <maven.build.timestamp.format>yyyyMMddHHmm</maven.build.timestamp.format>
        <artifact.build.timestamp>${maven.build.timestamp}</artifact.build.timestamp>
        <artifact.build.scmbranch>${git.branch}</artifact.build.scmbranch>
        <artifact.build.scmnumber>${git.buildNumber}</artifact.build.scmnumber>
        <artifact.build.scmrevision>${git.revision}</artifact.build.scmrevision>
        <artifact.build.scmbuildtime>${git.buildDate}</artifact.build.scmbuildtime>

        
        <mysql.version>9.2.0</mysql.version>
        <jasperreports.version>7.0.1</jasperreports.version>
        <flatlaf.version>2.6</flatlaf.version>
    </properties>

    <dependencies>
        <!-- Project DEPENDENCIES -->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>kriolos-opos-base</artifactId>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>kriolos-opos-hardware</artifactId>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>kriolos-opos-domain</artifactId>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>kriolos-opos-i18n_pt</artifactId>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>kriolos-opos-assets-image</artifactId>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>kriolos-opos-assets-reports</artifactId>
        </dependency>

        <dependency> 
            <groupId>commons-codec</groupId>  
            <artifactId>commons-codec</artifactId>  
            <version>1.17.1</version> 
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>3.18.0</version>
        </dependency>  
        

        <!-- Swing GUI -->
        <dependency> 
            <groupId>org.swinglabs.swingx</groupId>  
            <artifactId>swingx-all</artifactId>  
            <version>1.6.5-1</version> 
        </dependency>
        
        <!-- CVS File Parser --> 
        <dependency> 
            <groupId>net.sourceforge.javacsv</groupId>  
            <artifactId>javacsv</artifactId>  
            <version>2.0</version> 
        </dependency>
        
        <!-- JavaPOS
       <dependency> 
           <groupId>org.javapos</groupId>  
           <artifactId>javapos</artifactId>  
           <version>1.14.3</version>
           <scope>compile</scope>
           <exclusions>
               <exclusion>
                   <groupId>com.sleepycat</groupId>
                   <artifactId>je</artifactId>
               </exclusion>
           </exclusions>
       </dependency>
       <dependency>
           <groupId>org.javapos</groupId>
           <artifactId>javapos-contracts</artifactId>
           <version>1.14.3</version>
       </dependency>
        -->   
        
        <!-- JDBC runtime DEPENDENCIES -->
        <dependency> 
            <groupId>com.mysql</groupId>  
            <artifactId>mysql-connector-j</artifactId>  
            <version>${mysql.version}</version> 
            <scope>runtime</scope>
        </dependency>  
        <dependency>
            <groupId>org.hsqldb</groupId>
            <artifactId>hsqldb</artifactId>
            <version>2.7.2</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>org.mariadb.jdbc</groupId>
            <artifactId>mariadb-java-client</artifactId>
            <version>3.1.4</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
            <version>2.2.224</version>
            <scope>runtime</scope>
        </dependency>
        
        <!-- JASPER REPOR -->
        <dependency> 
            <groupId>net.sf.jasperreports</groupId>  
            <artifactId>jasperreports</artifactId>  
            <version>${jasperreports.version}</version> 
        </dependency>  
        <dependency> 
            <groupId>net.sf.jasperreports</groupId>  
            <artifactId>jasperreports-fonts</artifactId>  
            <version>${jasperreports.version}</version> 
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>net.sf.jasperreports</groupId>
            <artifactId>jasperreports-charts</artifactId>
            <version>${jasperreports.version}</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>net.sf.jasperreports</groupId>
            <artifactId>jasperreports-jdt</artifactId>
            <version>${jasperreports.version}</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>net.sf.jasperreports</groupId>
            <artifactId>jasperreports-pdf</artifactId>
            <version>${jasperreports.version}</version>
            <scope>runtime</scope>
        </dependency>
        <dependency> <!-- Used by JasperReport to generate xsl files -->
            <groupId>org.apache.poi</groupId>
            <artifactId>poi</artifactId>
            <version>5.2.3</version>
            <scope>runtime</scope>
        </dependency>
        
        <!-- rsyntaxtextarea -->
        <dependency>
            <groupId>com.fifesoft</groupId>
            <artifactId>rsyntaxtextarea</artifactId>
            <version>3.2.0</version>
        </dependency>

        <!-- Swing Date Picker 
        <dependency> 
            <groupId>org.jdatepicker</groupId>  
            <artifactId>jdatepicker</artifactId>  
            <version>1.3.4</version> 
        </dependency> -->
     
        <!-- Kotlin
       <dependency> 
           <groupId>org.jetbrains.kotlin</groupId>  
           <artifactId>kotlin-stdlib</artifactId> 
       </dependency>
        -->
        <!-- flatlaf - Swing LaF -->
        <dependency>
            <groupId>com.formdev</groupId>
            <artifactId>flatlaf</artifactId>
            <version>${flatlaf.version}</version>
            <scope>compile</scope> <!-- NBM:PROVIDED -->
        </dependency>
        <!-- Flat Look and Feel addon for SwingX -->
        <dependency>
            <groupId>com.formdev</groupId>
            <artifactId>flatlaf-swingx</artifactId>
            <version>${flatlaf.version}</version>
            <scope>runtime</scope> 
        </dependency>
        <dependency> 
            <groupId>com.formdev</groupId> 
            <artifactId>flatlaf-intellij-themes</artifactId> 
            <version>${flatlaf.version}</version>
            <scope>runtime</scope> 
        </dependency>
        
        <dependency>
            <groupId>net.coobird</groupId>
            <artifactId>thumbnailator</artifactId>
            <version>0.4.17</version>
        </dependency>

        <dependency>
            <groupId>org.liquibase</groupId>
            <artifactId>liquibase-core</artifactId>
        </dependency>
        
        <!-- JAX XML-->
        <dependency>
            <groupId>jakarta.xml.bind</groupId>
            <artifactId>jakarta.xml.bind-api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.bind</groupId>
            <artifactId>jaxb-impl</artifactId>
            <scope>runtime</scope>
        </dependency>

        <dependency> 
            <groupId>org.netbeans.external</groupId>  
            <artifactId>AbsoluteLayout</artifactId>
        </dependency> 
        <!-- Netbeans Module - Swing Validation: On NBM Need extra lib -->
        <dependency>
            <groupId>org.netbeans.modules</groupId>
            <artifactId>org-netbeans-modules-swing-validation</artifactId>
        </dependency>
    </dependencies>  
    <build>
        <finalName>kriolos-pos</finalName> 
        <plugins>
            <plugin> 
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>java</goal>
                        </goals>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>com.formdev</groupId>
                        <artifactId>flatlaf</artifactId>
                        <version>${flatlaf.version}</version>
                        <scope>compile</scope> <!-- RUN: PROVIDED -->
                    </dependency>
                    <!-- ValidationAPI and NBM WRAPPER  -->
                    <dependency>
                        <groupId>org.netbeans.external</groupId> 
                        <artifactId>ValidationAPI</artifactId>
                        <version>RELEASE180</version>
                        <scope>compile</scope>
                    </dependency>
       
                </dependencies>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <classpathPrefix>lib/</classpathPrefix>
                            <mainClass>com.openbravo.pos.forms.StartPOS</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/lib</outputDirectory>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>false</overWriteSnapshots>
                            <overWriteIfNewer>true</overWriteIfNewer>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>   
    </build>  
    
    <profiles>
        
        <profile>
            <id>run-StartPOS</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <exec.mainClass>com.openbravo.pos.forms.StartPOS</exec.mainClass>
            </properties>
        </profile>
        <profile>
            <id>run-JFrmConfig</id>
            <properties>
                <exec.mainClass>com.openbravo.pos.config.JFrmConfig</exec.mainClass>
                <!--
                <exec.mainClass>com.openbravo.pos.sales.JResetPickupID</exec.mainClass>
                <exec.mainClass>com.unicenta.pos.transfer.TransferPanel</exec.mainClass>
                -->
            </properties>
        </profile>
        
        <profile>
            <id>run-JasperDesignViewer</id>
            <properties>
                <exec.mainClass>net.sf.jasperreports.view.JasperDesignViewer</exec.mainClass>
                <exec.args>-XML -Fsrc/main/resources/com/openbravo/reports/products.jrxml</exec.args>
            </properties>
        </profile>
        <profile>
            <id>dev_dbmigration</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.liquibase</groupId>
                        <artifactId>liquibase-maven-plugin</artifactId>
                        <configuration>                  
                            <propertyFile>src/main/resources/pos_liquidbase/liquibase.properties</propertyFile>
                        </configuration> 
                        <dependencies>
                            <dependency> 
                                <groupId>com.mysql</groupId>
                                <artifactId>mysql-connector-j</artifactId>
                                <version>${mysql.version}</version> 
                            </dependency> 
                        </dependencies>               
                    </plugin> 
                </plugins>
            </build>
        </profile>
        
        <profile>
            <id>distribuition</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <version>3.7.1</version>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                                <configuration>
                                    <descriptors>
                                        <descriptor>src/main/assembly/zip.xml</descriptor>
                                    </descriptors>
                                    <finalName>${project.artifactId}-${project.version}-dist</finalName>
                                    <appendAssemblyId>false</appendAssemblyId>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
